<view class="container">
  <view class="settings-section">
    <view class="setting-item">
      <text>头像</text>
      <button bindtap="changeAvatar">修改</button>
    </view>
    <view class="setting-item">
      <text>用户名</text>
      <button bindtap="changeUsername">修改</button>
    </view>
    <view class="setting-item">
      <text>密码</text>
      <button bindtap="changePassword">修改</button>
    </view>
  </view>
  <view class="settings-section">
    <view class="setting-item">
      <text>论文公开</text>
      <switch checked="{{isPaperPublic}}" bindchange="togglePaperPublic"></switch>
    </view>
    <view class="setting-item">
      <text>接收通知</text>
      <switch checked="{{isNotificationEnabled}}" bindchange="toggleNotification"></switch>
    </view>
  </view>
  <view class="footer">
    <view class="tab-item selected" bindtap="goToPersonalCenter">
      <text>个人中心</text>
    </view>
    <view class="tab-item" bindtap="goToProjectManagement">
      <text>项目广场</text>
    </view>
    <view class="tab-item" bindtap="goToNotifications">
      <text>我的通知</text>
    </view>
  </view>
</view>
