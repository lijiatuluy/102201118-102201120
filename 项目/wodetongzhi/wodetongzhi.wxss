.container {
  padding: 20px;
  padding-top: 80px; /* 添加顶部内边距 */
}

.notifications-section {
  margin-bottom: 20px;
}

.notification-item {
  padding: 10px;
  border-bottom: 1px solid #e5e5e5;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #f8f8f8;
  border-top: 1px solid #e5e5e5;
}

.tab-item {
  flex: 1;
  padding: 30px;
  text-align: center;
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.selected {
  color: #007aff;
  font-weight: bold;
}
