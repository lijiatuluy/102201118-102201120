/* 底部三选项分段器 */
.bottom-segmented-control {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #f8f8f8;
  border-top: 1px solid #e5e5e5;
}

.segment {
  flex: 1;
  padding: 30px;
  text-align: center;
  font-size: 16px;
  color: #333;
}

.selected {
  color: #007aff;
  font-weight: bold;
}

/* 顶部三选项分段器 */
.top-segmented-control {
  display: flex;
  justify-content: space-around;
  margin-top: 88px;
  height: 50px;
}

/* 顶部分段器按钮样式 */
.segment {
  flex: 1;
  /*padding: 10px;*/
  text-align: center;
  font-size: 16px;
  line-height: 0px;
  color: #333;
}

.selected {
  color: #007aff;
  font-weight: bold;
}

.search-bar {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  padding: 0 20px;
}

.search-input {
  flex: 3;
  padding: 10px;
  border: 1px solid #0a0a0a;
  border-radius: 4px;
}

.create-project-button {
  flex: 1;
  margin-left: 10px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}

/*开始生产卡片*/
/* 项目卡片样式 */
/* 专家卡片整体样式 */
.professor-card {
  width: 86%;
  border: 1px solid #000;
  border-radius: 4px;
  padding: 15px;
  margin-top: 30px;
  margin-right: auto;
  margin-left: auto;
}

/* 头像和名称模块 */
.professor-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  position: relative;
}

/* 头像圆形 */
.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #007aff; /* 圆形填色 */
}

/* 教授名称和右侧的更多选项（...） */
.professor-details {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20px; /* 距离头像 20px */
}

.professor-name {
  font-weight: bold;
  font-size: 18px;
}

.more-options {
  font-size: 35px;
  color: #999;
}

/* 个人简介 */
.professor-intro {
  font-size: 14px;
  color: #666;
  margin-top: 10px;
  margin-left: 70px; /* 与教授名称左对齐 */
}

/* 标签样式 */
.tag-list {
  margin-top: 10px;
  display: flex;
}

.tag {
  padding: 5px 10px;
  border: 1px solid #007aff;
  border-radius: 8px;
  margin-right: 10px;
  font-size: 12px;
  color: #007aff;
}