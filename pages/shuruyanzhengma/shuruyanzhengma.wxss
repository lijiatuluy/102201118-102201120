/* 顶部白色矩形样式 */
.top-bar {
  width: 100%;
  height: 100px; /* 高度可以根据需要调整 */
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.back-button {
  position: absolute;
  left: 20px;
  top: 55px;
  color: black;
  font-size: 18px;
}

.title {
  position: absolute;
  top: 55px;
  color: black;
  font-size: 20px;
}

/* 页面内容区域背景色 */
.content {
  background-color: #f5f5f5;
  height: calc(100vh - 60px); /* 减去顶部矩形的高度 */
  padding-top: 100px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 短信验证码输入区域 */
.input-section {
  display: flex;
  flex-direction: column;
  margin-bottom: 100px;
  width: 80%; /* 控制整体宽度 */
}

.label {
  color: black;
  font-size: 16px;
  margin-bottom: 10px; /* 控制输入框上方文字与输入框的距离 */
}

.code-input-container {
  display: flex; /* 保持在同一行 */
}

.code-input {
  width: 100%; /* 输入框占据100%宽度 */
  border: 1px solid black;
  padding: 10px;
  border-radius: 4px;
  background-color: white;
}

/* 下一步按钮 */
.next-button {
  width: 80%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  text-align: center;
  border-radius: 4px;
  font-size: 18px;
}